{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Water Consumption for Domestic and Non-Domestic in Malaysia by State (Million Liters per Day, 2003-2022)",
    "subtitle": "Data for W.P. Kuala Lumpur and W.P. Putrajaya are subsumed under Selangor.",
    "font": "serif",
    "fontSize": 17,
    "align": "center",
    "subtitleFont": "serif",
    "subtitleFontSize": 14,
    "subtitleColor": "gray"
  },
  "width": 700,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Sector_selection",
      "value": "overall",
      "bind": {
        "input": "select",
        "options": ["overall", "domestic", "nondomestic"],
        "name": "Sector: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "scale": 2200,
    "center": [109, 3.8]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {
              "type": "geoshape",
              "stroke": "white",
              "strokeWidth":0.8
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from":{
            "data": {
              "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/0.water_consumption.csv",
              "format": {"type": "csv"}
            },
            "key": "state",
            "fields": ["state","sector","value","year"]
          }
        },
        {
          "filter": "datum.year == Year_selection"
        }
      ],
      "encoding": {
        "color":{
          "field": "value",
          "type": "quantitative",
          "title": "Water Consumption",
          "scale": {
            "scheme": "yellowgreenblue",
            "domain": [0,4000]}
                 },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State: "},
        {"field": "value", "type": "quantitative", "title": "Million Liters per Day: "}
      ]
      }  
        
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/sg.json",
        "format": {"type": "topojson", "feature": "SG"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.name", "type": "nominal", "title": "Singapore"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/th.json",
        "format": {"type": "topojson", "feature": "TH"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Thailand"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/bn.json",
        "format": {"type": "topojson", "feature": "BN"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Brunei"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/id.json",
        "format": {"type": "topojson", "feature": "ID"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Indonesia"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/vn.json",
        "format": {"type": "topojson", "feature": "VN"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Vietnam"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/mm.json",
        "format": {"type": "topojson", "feature": "MM"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Myanmar"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/country%20detail%20json/kh.json",
        "format": {"type": "topojson", "feature": "KH"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Cambodia"}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
