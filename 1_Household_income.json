{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Income in Malaysia by State (2019-2022)",
  "width": 700,  
  "height": 600,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": 2000, 
    "center": [107.6, 4.2105]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/malaysia.topojson",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.Name + ' ' + Year_selection + ' ' + datum.year",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/36a49e93eccb232a6539f3ee6cfbed9ecbd4a23c/hh_income_district.csv"
      },
      "transform": [
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/malaysia.topojson",
              "format": {
                "type": "topojson",
                "feature": "states"
              }
            },
            "key": "properties.Name"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "income_mean",
          "type": "quantitative",
          "title": ["Percentage (%)"],
          "scale": {
            "type": "linear",
            "domain": [10,100],
            "range": [ "#f7fcb9", "#addd8e", "#78c679", "#31a354", "#006837"]
          },
          "legend": {
            "titleAlign": "center",
            "titleAnchor": "middle",
            "titleFontSize": 17,
            "labelFontSize": 15
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {
            "field": "income_mean",
            "type": "quantitative",
            "title": "Percentage of Employed Labour Force to Working Population (%)",
            "format": ".2f"
          },
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ],
  "config": {}
}
