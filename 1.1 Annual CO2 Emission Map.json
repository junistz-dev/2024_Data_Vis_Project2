{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Annual CO2 Emissions",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "params": [
    {
      "name": "SelectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Year:    "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/main/ne_10m_ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/main/ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/main/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME_EN",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/main/data/Annual%20CO2%20emissions.csv"
            },
            "key": "Entity",
            "fields": ["Entity","Annual emissions", "Year"]
          }
        },
        {
          "filter": "datum.Year == SelectedYear"
          }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Annual emissions",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [1000,100000000],
            "scheme": "goldorange"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Annual emissions",
            "type": "quantitative",
            "title": "CO2 Emissions",
            "format": ".2s"
          }
        ]
      }
    }
  ],  
  "config": {}
}
