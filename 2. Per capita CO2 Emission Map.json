{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Per Capita CO2 Emissions (2022)",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "ne_10m_ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue"
      }
    },
    {
      "data": {
        "url": "ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/Per capita CO2 emissions, 2022.csv"
            },
            "key": "Entity",
            "fields": ["Annual emissions (per capita)"]
          }
        },
        {
          "calculate": "datum['Annual emissions (per capita)'] + 0.1",
          "as": "Adjusted Emissions"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Adjusted Emissions",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 20], 
            "scheme": "reds"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Adjusted Emissions",
            "type": "quantitative",
            "title": "CO2 Emissions (per capita)",
            "format": ".2f" 
          }
        ]
      }
    }
  ]
}
