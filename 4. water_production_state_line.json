{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "title": {
    "text": "Water Production in Malaysia by State",
    "subtitle": "Data for W.P. Kuala Lumpur and W.P. Putrajaya are subsumed under Selangor.",
    "font": "serif",
    "fontSize": 20,
    "align": "center",
    "subtitleFont": "serif",
    "subtitleFontSize": 14,
    "subtitleColor": "gray"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/csv/4.%20water_production_state.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "value",
      "value": 0, 
      "bind": {
        "input": "range",
        "min": 0,
        "max": 5000, 
        "step": 100,
        "name": "Minimum Production: "
      }
    },
    {
      "name": "minYear",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Minimum Year: "
      }
    },
    {
      "name": "maxYear",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Maximum Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.value >= value && datum.year >= minYear && datum.year <= maxYear"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",  
          "title": "Year"
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Water Production"
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "title": "State"
        },
        "tooltip": [
          {
            "field": "state",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "value",
            "type": "quantitative",
            "title": "Water Production"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "field": "state",
          "type": "nominal"
        },
        "x": {
          "field": "year",
          "type": "ordinal"
        },
        "y": {
          "field": "value",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      },
      "transform": [
        {
          "filter": "(datum.state == 'Selangor' || datum.state == 'Johor') && datum.year == '2014'"
        }
      ]
    }
  ]
}
