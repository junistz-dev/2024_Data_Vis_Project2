{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Water Consumption for Domestic and Non-Domestic in Malaysia by State (Million Liters per Day, 2003-2022)",
    "subtitle": "Data for W.P. Kuala Lumpur and W.P. Putrajaya are subsumed under Selangor.",
    "font": "serif",
    "fontSize": 17,
    "align": "center",
    "subtitleFont": "serif",
    "subtitleFontSize": 14,
    "subtitleColor": "gray"
  },
  "width": 700,
  "height": 600,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Sector_selection",
      "value": "overall",
      "bind": {
        "input": "select",
        "options": ["overall", "domestic", "nondomestic"],
        "name": "Sector: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": 2100,
    "center": [107.6, 4.2105]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/junistz-dev/2024_Data_Vis_Project2/refs/heads/main/my.json",
        "format": {
          "type": "topojson",
          "feature": "MY"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "gray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "properties.NAME",
          "type": "nominal",
          "title": "MY"
        }
      }
    },
    {
      "data": {
